name: Linter and Code Analysis

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  php-linter:
    name: PHP Linter
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '7.4'

      - name: Run PHPStan
        run: vendor/bin/phpstan analyse src tests --level=max

  js-linter:
    name: JavaScript Linter
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Run ESLint
        run: npx eslint .
